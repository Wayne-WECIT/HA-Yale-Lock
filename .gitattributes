# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows specific
*.bat text eol=crlf

# JSON/YAML
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Markdown
*.md text eol=lf

# JavaScript
*.js text eol=lf
